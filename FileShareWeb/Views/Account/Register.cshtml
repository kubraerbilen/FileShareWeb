@model FileShareWeb.Models.Account.RegisterModels

@{
    ViewBag.Title = "Kayıt Ol";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        @using (Html.BeginForm())
        {
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h2>Kayıt Ol</h2>
                    @if (ViewBag.ReError != null && string.IsNullOrEmpty((string)ViewBag.ReError) == false)
                    {
                        <small style="color:red;">@ViewBag.ReError</small>
                    }
                    else
                    {
                        <small>Please enter e-mail and password.</small>
                    }
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <center>
                            <img src="https://picsum.photos/id/237/125/125" class="img-circle img-responsive" />
                        </center>
                    </div>

                   

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.EMAIL, new
                   {
                       @class = "form-control",
                       placeholder = "E-Mail Adress",
                       type = "email",
                       required = "required"
                   })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.PASSWORD, new
                   {
                       @class = "form-control",
                       placeholder = "Password",
                       type = "password",
                       required = "required"
                   })
                    </div>

                    

                </div>
                <div class="panel-footer text-right">
                    <a href="@Url.Action("Login","Account")" class="btn btn-info">
                        <span class="glyphicon glyphicon-log-in"></span> Login
                    </a>
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-floppy-saved"></span> Register
                    </button>

                </div>
            </div>
        }
    </div>
</div>


